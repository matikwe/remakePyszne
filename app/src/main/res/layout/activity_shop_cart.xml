<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background1"
    android:gravity="right"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="activities.ShopCartActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Tw贸j koszyk"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backToProduct"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:onClick="backToProduct"
            android:text="Powr贸t do zakup贸w"
            tools:ignore="OnClick"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/orderProduct"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:onClick="orderProduct"
            android:text="Zam贸w produkty"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/refresh"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:onClick="refreshShopCart"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_baseline_refresh_24"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listViewShopCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"/>

</LinearLayout>