<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OrderProductActivity"
    android:orientation="vertical">



    <TextView
        android:id="@+id/titleOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Historia zamówień"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:ignore="InvalidId" />

    <Button
        android:id="@+id/backToRestaurant"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/custom_button"
        android:onClick="backToRestaurant"
        android:text="Powrót do restauracji"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        tools:ignore="OnClick"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">



        <ListView
            android:id="@+id/listViewOrderProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp" />

    </LinearLayout>
    </LinearLayout>


