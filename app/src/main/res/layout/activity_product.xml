<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background1"
    android:gravity="right"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activities.ProductActivity">

    <TextView
        android:id="@+id/TextViewAvailableProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonBackToRestaurant"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:onClick="backToRestaurant"
            android:text="PowrÃ³t do restauracji"
            tools:ignore="OnClick"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/buttonShopCart"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:drawableLeft="@drawable/ic_shopping_cart"
            android:onClick="openShopCart"
            android:text="KOSZYK (0)"
            tools:ignore="OnClick"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:padding="10dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"/>

</LinearLayout>