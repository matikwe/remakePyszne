<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4D31CFE1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home"
                android:layout_width="25dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_baseline_home" />
        <TextView
            android:id="@+id/nameRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="Name"
            android:textSize="28dp"
            android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pin"
                android:layout_width="25dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_pin" />

            <TextView
                android:id="@+id/addressRest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="address"
                android:textSize="18dp" />

        </LinearLayout>

        <!--user name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/people"
                android:layout_width="25dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_baseline_people" />
        <TextView
            android:id="@+id/nameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="Name"
            android:textSize="28dp"
            android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pinUser"
                android:layout_width="25dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_pin" />

            <TextView
                android:id="@+id/addressUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="address"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pinList"
                android:layout_width="25dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_baseline_list" />
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/stateVector"
                android:layout_width="25dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_baseline_forward" />
            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="#6D808080"
            android:id="@+id/linearLayoutStateButton">

            <TextView
                android:id="@+id/stateButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>